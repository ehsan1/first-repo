extends ../layout

block content 
    h1 Add new Product
    form(action="/messages/add", method="post")
        .form-group
            .w-50
                label(for="from_user") Sender Name
                input#from_user(type="text", class="form-control", name="from_user")
        .form-group
            label(for="message") Message
        .form-group
            textarea#message(name="message", cols="68", rows="5" placeholder="Type a message ...")
        .form-group
            .w-50
                label(for="to_user") Receiver Name
                input#to_user(type="text", class="form-control", name="to_user")

        input(type="submit", class="btn btn-primary" value="Send")

    